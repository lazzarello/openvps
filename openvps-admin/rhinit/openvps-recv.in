PREFIX=@prefix@

case "$1" in
  start)
 	echo -n $"Starting OpenVPS Monitor: "
	$PREFIX/sbin/openvps-mon start 
	RETVAL=$?
	echo
	;;
  stop)
	$PREFIX/sbin/openvps-mon stop 
	RETVAL=$?
	echo
	;;
  status)
	# XXX not yet implemented
	;;
  restart|reload)
	$PREFIX/sbin/openvps-mon restart &
	;;
  *)
	echo $"Usage: $0 {start|stop|status|restart}"
	exit 1
esac

exit $RETVAL

