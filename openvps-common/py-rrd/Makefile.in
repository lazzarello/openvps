build:
	python setup.py build

install:
	if test -z "$(DESTDIR)"; then \
		@PYTHON@ setup.py install; \
	else \
		@PYTHON@ setup.py install --root $(DESTDIR); \
	fi

clean:
	rm -rf *~ *.pyc *.pyo build

distclean: clean
	rm Makefile

